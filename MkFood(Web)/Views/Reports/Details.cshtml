@model MKFood.DB.Models.Bill

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-10">
                <img src="~/img/logo.png" />
            </div>
            <div class="col-2"><h3>MkFood</h3><h5>Resturant</h5></div>
        </div>
        <div class="row">

            <div class="col-10">
                <label for="name-inp"><h6>Name</h6></label>
                <input disabled id="customer" value="@Model.Customer?.Name" type="text" class="name-inp bg-light input-group-text w-100" />
            </div>
            <div class="col-2">
                <label for="number-inp"><h6>|</h6></label>
                <input disabled value="@Model.Created?.ToString("dd/MM/yyyy")" type="datetime" class="number-inp input-group-text w-100" />
            </div>
        </div>
    </div>
    <div class="card-body">
            <table class="table">
                <tbody>
                    @foreach (var item in Model.orders)
                    {
                        <tr  class="bg-light">
                            <td>
                                <h6 style="margin-top:10px;">@item?.Food?.Name</h6>
                            </td>
                            <td>
                                <h6 style="margin-top:5px;">@item?.Count</h6>
                            </td>
                            <td>
                                <h6 style="margin-top:10px;" >$@item?.Cost</h6>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
    </div>
    
    <div class="card-footer">
        <div class="row">
            <div class="col">
                <h5 for="Fee">Fee($)</h5>
                <input disabled class="Fee input-group-text" type="number" value="@Model.Fee" />
            </div>
            <div class="col">
                <h5 for="Tax">Tax(%)</h5>
                <input disabled  class="Tax input-group-text" type="number" value="@Model.Tax" />
            </div>

            <div class="col">
                <h5 for="Tax">Sum($)</h5>
                <h4  class="Fee text-capitalize">$@Model.Cost</h4>
            </div>
            

            <a asp-action="Index" style="text-align:center;text-decoration:none;" class="mt-5 btn-lg btn-primary">Back</a>

        </div>
    </div>

</div>
